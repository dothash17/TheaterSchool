@model IEnumerable<TheaterSchool.Models.TeacherPerformance>

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a class="btn btn-success" asp-action="Create">Создать новое</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID преподавателя
            </th>
            <th>
                Фамилия преподавателя
            </th>
            <th>
                ID спектакля
            </th>
            <th>
                Название спектакля
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.PhysicalPersonID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.PhysicalPerson.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Performance.PerformanceID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Performance.PerformanceName)
            </td>
            <td>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-teacherId="@item.TeacherID" asp-route-performanceId="@item.PerformanceID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
