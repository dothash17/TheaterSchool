@model TheaterSchool.Models.TeacherPerformance

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID преподавателя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeacherID)
        </dd>
        <dt class = "col-sm-2">
            Фамилия преподавателя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Teacher.PhysicalPerson.LastName)
        </dd>
        <dt class = "col-sm-2">
            ID спектакля
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PerformanceID)
        </dd>
        <dt class="col-sm-2">
            Название спектакля
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Performance.PerformanceName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TeacherID" />
        <input type="hidden" asp-for="PerformanceID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
